{
  "id": "Ganzoni_equation_for_iron_deficiency_anemia.v1",
  "gdl_version": "2.0",
  "concept": "gt0001",
  "language": {
    "original_language": "ISO_639-1::en"
  },
  "description": {
    "original_author": {
      "date": "2020-03-08",
      "name": "Winner Ng",
      "organisation": "Cambio CDS",
      "email": "dokter.winner@gmail.com"
    },
    "lifecycle_state": "Author draft",
    "details": {
      "en": {
        "id": "en",
        "purpose": "To calculate iron deficit thus to determine the dosing iron for treatment.",
        "keywords": [
          "Ganzoni",
          "equation",
          "formula",
          "iron",
          "deficiency",
          "anemia",
          "dosing"
        ],
        "use": "In iron deficiency anemia case which the intravenous iron supplementation is the considered treatment of choice.\nIn iron deficiency anemia case which the intravenous iron supplementation is the considered treatment of choice.\n\nThe iron deficit, in mg, is calculated based on the following equation:\n(Body weight * (Target Haemoglobin - Actual Haemoglobin) * 2.4) + Iron stores\n\nBody weight is in kg, Target and Actual Haemoglobin are in g/dL, and Iron stores is in mg.\nTo calculate Iron stores: use 500 mg for adults and children â‰¥35 kg; use 15 mg/kg if <35 kg.",
        "copyright": "@CambioCDS"
      }
    },
    "other_details": {
      "references": "1. Ganzoni AM. [Intravenous iron-dextran: therapeutic and experimental possibilities]. Schweiz Med Wochenschr. 1970;100(7):301-3.\n2. Koch TA, Myers J, Goodnough LT. Intravenous Iron Therapy in Patients with Iron Deficiency Anemia: Dosing Considerations. Anemia. 2015;2015:763576."
    }
  },
  "definition": {
    "data_bindings": {
      "gt0002": {
        "id": "gt0002",
        "model_id": "openEHR-EHR-OBSERVATION.body_weight.v2",
        "template_id": "openEHR-EHR-OBSERVATION.body_weight.v2",
        "type": "INPUT",
        "elements": {
          "gt0003": {
            "id": "gt0003",
            "path": "/data[at0002]/events[at0003]/data[at0001]/items[at0004]"
          }
        }
      },
      "gt0004": {
        "id": "gt0004",
        "model_id": "openEHR-EHR-OBSERVATION.lab_test-full_blood_count.v1",
        "template_id": "openEHR-EHR-OBSERVATION.lab_test-full_blood_count.v1",
        "type": "INPUT",
        "elements": {
          "gt0005": {
            "id": "gt0005",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0078.4]"
          }
        }
      },
      "gt0007": {
        "id": "gt0007",
        "model_id": "openEHR-EHR-EVALUATION.ganzoni_equation_for_iron_deficiency_anemia.v0",
        "template_id": "openEHR-EHR-EVALUATION.ganzoni_equation_for_iron_deficiency_anemia.v0",
        "type": "INPUT",
        "elements": {
          "gt0008": {
            "id": "gt0008",
            "path": "/data[at0001]/items[at0006]"
          }
        }
      },
      "gt0009": {
        "id": "gt0009",
        "model_id": "openEHR-EHR-EVALUATION.ganzoni_equation_for_iron_deficiency_anemia.v0",
        "template_id": "openEHR-EHR-EVALUATION.ganzoni_equation_for_iron_deficiency_anemia.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0010": {
            "id": "gt0010",
            "path": "/data[at0001]/items[at0004]"
          },
          "gt0011": {
            "id": "gt0011",
            "path": "/data[at0001]/items[at0005]"
          },
          "gt0012": {
            "id": "gt0012",
            "path": "/data[at0001]/items[at0002]"
          },
          "gt0013": {
            "id": "gt0013",
            "path": "/data[at0001]/items[at0003]"
          }
        }
      }
    },
    "rules": {
      "gt0014": {
        "id": "gt0014",
        "priority": 7,
        "when": [
          "$gt0003|Weight|.unit=='lb'"
        ],
        "then": [
          "$gt0010|Weight|.magnitude=$gt0003.magnitude*0.453592",
          "$gt0010|Weight|.precision=1",
          "$gt0010|Weight|.unit='kg'"
        ]
      },
      "gt0015": {
        "id": "gt0015",
        "priority": 6,
        "when": [
          "$gt0003|Weight|.unit=='kg'"
        ],
        "then": [
          "$gt0010|Weight|.magnitude=$gt0003.magnitude",
          "$gt0010|Weight|.unit='kg'"
        ]
      },
      "gt0016": {
        "id": "gt0016",
        "priority": 5,
        "when": [
          "$gt0005|Actual Haemoglobin|.unit=='gm/l'"
        ],
        "then": [
          "$gt0011|Actual Haemoglobin|.magnitude=$gt0005.magnitude/10",
          "$gt0011|Actual Haemoglobin|.precision=1",
          "$gt0011|Actual Haemoglobin|.unit='gm/dl'"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 4,
        "when": [
          "$gt0005|Actual Haemoglobin|.unit=='gm/dl'"
        ],
        "then": [
          "$gt0011|Actual Haemoglobin|.magnitude=$gt0005.magnitude",
          "$gt0011|Actual Haemoglobin|.unit='gm/dl'"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 3,
        "when": [
          "$gt0010|Weight|>=35,kg"
        ],
        "then": [
          "$gt0012|Iron stores|=500,mg"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 2,
        "when": [
          "$gt0010|Weight|<35,kg"
        ],
        "then": [
          "$gt0012|Iron stores|.magnitude=$gt0003.magnitude*15",
          "$gt0012|Iron stores|.precision=1",
          "$gt0012|Iron stores|.unit='mg'"
        ]
      },
      "gt0020": {
        "id": "gt0020",
        "priority": 1,
        "when": [
          "$gt0003|Weight|!=null",
          "$gt0005|Actual Haemoglobin|!=null",
          "$gt0008|Target Haemoglobin|!=null"
        ],
        "then": [
          "$gt0013|Total iron deficit|.magnitude=($gt0003.magnitude*2.4*($gt0008.magnitude-$gt0011.magnitude))+$gt0012.magnitude",
          "$gt0013|Total iron deficit|.unit='mg'"
        ]
      }
    }
  },
