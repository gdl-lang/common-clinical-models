          }
        }
      },
      "gt0012": {
        "id": "gt0012",
        "model_id": "openEHR-EHR-EVALUATION.strep_pharyngitis_centor_assessment.v0",
        "template_id": "openEHR-EHR-EVALUATION.strep_pharyngitis_centor_assessment.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0013": {
            "id": "gt0013",
            "path": "/data[at0001]/items[at0002]"
          },
          "gt0014": {
            "id": "gt0014",
            "path": "/data[at0001]/items[at0003]"
          }
        }
      }
    },
    "rules": {
      "gt0022": {
        "id": "gt0022",
        "priority": 6,
        "when": [
          "$gt0005|Exudate or swelling on tonsils|!=null",
          "$gt0006|Tender/Swollen anterior cervical lymph nodes|!=null",
          "$gt0007|Cough present|!=null",
          "$gt0028|Age|!=null",
          "$gt0029|Fever|!=null"
        ],
        "then": [
          "$gt0010|Total score|.magnitude=$gt0005.value+$gt0006.value+$gt0007.value+$gt0028.value+$gt0029.value",
          "$gt0010|Total score|.unit='1'",
          "$gt0010|Total score|.precision=0"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 5,
        "when": [
          "$gt0010|Total score|>=4,1"
        ],
        "then": [
          "$gt0013|Interpretation|='Strep Pharyngitis Diagnosis Probability is  51 – 53%'",
          "$gt0014|Recommendation|='Rapid strep testing/culture'"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 4,
        "when": [
          "$gt0010|Total score|.magnitude==3"
        ],
        "then": [
          "$gt0013|Interpretation|='Strep Pharyngitis Diagnosis Probability is  28 – 35%'",
          "$gt0014|Recommendation|='Consider strep testing/culture'"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 3,
        "when": [
          "$gt0010|Total score|.magnitude==2"
        ],
        "then": [
          "$gt0013|Interpretation|='Strep Pharyngitis Diagnosis Probability is  11 – 17%'",
          "$gt0014|Recommendation|='Consider strep testing/culture'"
        ]
      },
      "gt0026": {
        "id": "gt0026",
        "priority": 2,
        "when": [
          "$gt0010|Total score|.magnitude==1"
        ],
        "then": [
          "$gt0013|Interpretation|='Strep Pharyngitis Diagnosis Probability is  5 – 10%'",
          "$gt0014|Recommendation|='No further testing'"
        ]
      },
      "gt0027": {
        "id": "gt0027",
        "priority": 1,
        "when": [
          "$gt0010|Total score|<1,1"
        ],
        "then": [
          "$gt0013|Interpretation|='Strep Pharyngitis Diagnosis Probability is  1 – 2.5%'",
          "$gt0014|Recommendation|='No further testing'"
        ]
      }
    }
  },
