          }
        }
      }
    },
    "rules": {
      "gt0015": {
        "id": "gt0015",
        "priority": 11,
        "when": [
          "$gt0003|Age|>=3,a",
          "$gt0003|Age|<15,a"
        ],
        "then": [
          "$gt0009|Age|=1|local::at0016|3 to 14 years|"
        ]
      },
      "gt0016": {
        "id": "gt0016",
        "priority": 10,
        "when": [
          "$gt0003|Age|>=15,a",
          "$gt0003|Age|<45,a"
        ],
        "then": [
          "$gt0009|Age|=0|local::at0017|15 to 44 years|"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 9,
        "when": [
          "$gt0003|Age|>=45,a"
        ],
        "then": [
          "$gt0009|Age|=-1|local::at0018|45 years and above|"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 8,
        "when": [
          "(($gt0021|Temperature|.magnitude>38)&&($gt0021|Temperature|.unit=='°C'))||(($gt0021|Temperature|.magnitude>100.4)&&($gt0021|Temperature|.unit=='°F'))"
        ],
        "then": [
          "$gt0011|Fever|=1|local::at0022|Yes|"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 7,
        "when": [
          "(($gt0021|Temperature|.magnitude<=38)&&($gt0021|Temperature|.unit=='°C'))||(($gt0021|Temperature|.magnitude<=100.4)&&($gt0021|Temperature|.unit=='°F'))"
        ],
        "then": [
          "$gt0011|Fever|=0|local::at0021|No|"
        ]
      },
      "gt0022": {
        "id": "gt0022",
        "priority": 6,
        "when": [
          "$gt0003|Age|!=null",
          "$gt0021|Temperature|!=null",
          "$gt0005|Exudate or swelling on tonsils|!=null",
          "$gt0006|Tender/Swollen anterior cervical lymph nodes|!=null",
          "$gt0007|Cough present|!=null"
        ],
        "then": [
          "$gt0010|Total score|.magnitude=$gt0005.value+$gt0006.value+$gt0007.value+$gt0009.value+$gt0011.value"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 5,
        "when": [
          "$gt0010|Total score|>=4,1"
        ],
        "then": [
          "$gt0013|Interpretation|='Strep Pharyngitis Diagnosis Probability is  51 – 53%'",
          "$gt0014|Recommendation|='Rapid strep testing/culture'"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 4,
        "when": [
          "$gt0010|Total score|.magnitude==3"
        ],
        "then": [
          "$gt0013|Interpretation|='Strep Pharyngitis Diagnosis Probability is  28 – 35%'",
          "$gt0014|Recommendation|='Consider strep testing/culture'"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 3,
        "when": [
          "$gt0010|Total score|.magnitude==2"
        ],
        "then": [
          "$gt0013|Interpretation|='Strep Pharyngitis Diagnosis Probability is  11 – 17%'",
          "$gt0014|Recommendation|='Consider strep testing/culture'"
        ]
      },
      "gt0026": {
        "id": "gt0026",
        "priority": 2,
        "when": [
          "$gt0010|Total score|.magnitude==1"
        ],
        "then": [
          "$gt0013|Interpretation|='Strep Pharyngitis Diagnosis Probability is  5 – 10%'",
          "$gt0014|Recommendation|='No further testing'"
        ]
      },
      "gt0027": {
        "id": "gt0027",
        "priority": 1,
        "when": [
          "$gt0010|Total score|<1,1"
        ],
        "then": [
          "$gt0013|Interpretation|='Strep Pharyngitis Diagnosis Probability is  1 – 2.5%'",
          "$gt0014|Recommendation|='No further testing'"
        ]
      }
    }
  },
