      "gt0019": {
        "id": "gt0019",
        "model_id": "openEHR-EHR-EVALUATION.scorten_assessment.v0",
        "template_id": "openEHR-EHR-EVALUATION.scorten_assessment.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0020": {
            "id": "gt0020",
