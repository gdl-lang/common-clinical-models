definition
	EVALUATION[at0000] matches {	-- Centor Criteria Assessment
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Recommendation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0012, 	-- No further testing required, give symptomatic treatment only
									at0013, 	-- Perform throat culture/RADT, give antibiotics only if positive
									at0014; 	-- Perform throat culture/RADT, give empirical antibiotic treatment
									at0012]	-- assumed value
								}
							}
						}
					}
					ELEMENT[at0011] occurrences matches {0..1} matches {	-- Comment
						value matches {
							DV_TEXT matches {*}
						}
					}
				}
			}
		}
	}

