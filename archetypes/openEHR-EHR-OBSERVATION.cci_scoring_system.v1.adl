											6|[local::at0060]  	-- Yes
										}
									}
									ELEMENT[at0022] occurrences matches {0..1} matches {	-- AIDS (not just HIV positive)
										value matches {
											0|[local::at0061], 	-- No
											6|[local::at0062]  	-- Yes
										}
									}
									ELEMENT[at0023] occurrences matches {0..1} matches {	-- CCI score
										value matches {
											DV_COUNT matches {
