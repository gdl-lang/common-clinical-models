											}
										}
									}
									ELEMENT[at0024] occurrences matches {0..1} matches {	-- CCI age adjusted score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..45|}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
