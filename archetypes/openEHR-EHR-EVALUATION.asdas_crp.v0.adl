definition
	EVALUATION[at0000] matches {	-- Disease activity score ASDAS-CRP
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0008] occurrences matches {0..1} matches {	-- Disease activity
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0054, 	-- Inactive
									at0055, 	-- Low
									at0056, 	-- High
									at0057]	-- Very high
								}
							}
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {	-- Duration of morning stiffness
						value matches {
							0|[local::at0020], 	-- least severe +0
							1|[local::at0021], 	-- +1
							2|[local::at0022], 	-- +2
							3|[local::at0023], 	-- +3
							4|[local::at0024], 	-- +4
							5|[local::at0025], 	-- +5
							6|[local::at0026], 	-- +6
							7|[local::at0027], 	-- +7
							8|[local::at0028], 	-- +8
							9|[local::at0029], 	-- +9
							10|[local::at0030]  	-- most severe +10
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {	-- Peripheral pain/swelling
						value matches {
							0|[local::at0042], 	-- least severe +0
							1|[local::at0043], 	-- +1
							2|[local::at0044], 	-- +2
							3|[local::at0045], 	-- +3
							4|[local::at0046], 	-- +4
							5|[local::at0047], 	-- +5
							6|[local::at0048], 	-- +6
							7|[local::at0049], 	-- +7
							8|[local::at0050], 	-- +8
							9|[local::at0051], 	-- +9
							10|[local::at0052]  	-- most severe +10
						}
					}
					ELEMENT[at0002] occurrences matches {0..1} matches {	-- Back pain
						value matches {
							0|[local::at0009], 	-- least severe  +0
							1|[local::at0010], 	-- +1
							2|[local::at0011], 	-- +2
							3|[local::at0012], 	-- +3
							4|[local::at0013], 	-- +4
							5|[local::at0014], 	-- +5
							6|[local::at0015], 	-- +6
							7|[local::at0016], 	-- +7
							8|[local::at0017], 	-- +8
							9|[local::at0018], 	-- +9
							10|[local::at0019]  	-- most severe +10
						}
					}
					ELEMENT[at0059] occurrences matches {0..1} matches {	-- Patient global assessment
						value matches {
							0|[local::at0060], 	-- least severe +0
							1|[local::at0061], 	-- +1
							2|[local::at0062], 	-- +2
							3|[local::at0063], 	-- +3
							4|[local::at0064], 	-- +4
							5|[local::at0065], 	-- +5
							6|[local::at0066], 	-- +6
							7|[local::at0067], 	-- +7
							8|[local::at0068], 	-- +8
							9|[local::at0069], 	-- +9
							10|[local::at0070]  	-- most severe +10
						}
					}
					ELEMENT[at0053] occurrences matches {0..1} matches {	-- Comment
						value matches {
							DV_TEXT matches {*}
						}
					}
					ELEMENT[at0071] occurrences matches {0..1} matches {	-- ASDAS-CRP score
						value matches {
							C_DV_QUANTITY <
								property = <[openehr::380]>
								list = <
									["1"] = <
										units = <"1">
										magnitude = <|>=0.0|>
										precision = <|2|>
									>
								>
							>
						}
					}
				}
			}
		}
	}

